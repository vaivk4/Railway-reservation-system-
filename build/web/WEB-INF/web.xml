<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>search_result</servlet-name>
        <servlet-class>search_result</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>jlprofile</servlet-name>
        <servlet-class>jlprofile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>jbook</servlet-name>
        <servlet-class>jbook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>jbook_detail</servlet-name>
        <servlet-class>jbook_detail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>jbook_cancel</servlet-name>
        <servlet-class>jbook_cancel</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>search_result</servlet-name>
        <url-pattern>/search_result</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>jlprofile</servlet-name>
        <url-pattern>/jlprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>jbook</servlet-name>
        <url-pattern>/jbook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>jbook_detail</servlet-name>
        <url-pattern>/jbook_detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>jbook_cancel</servlet-name>
        <url-pattern>/jbook_cancel</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/homepage.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
